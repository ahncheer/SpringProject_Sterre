	<update id="buyUpdate" flushCache="true" 
		parameterType="com.lec.sterre_test.buy.beans.BuyWriteDTO">
		UPDATE sr_goods 
		SET 
			buyuid  = #{a.buyuid} ,
			username  = #{a.username} , 
			goodsuid  = #{a.goodsuid},
			buynum  = #{a.buynum},
			buydate  = #{a.buydate}
		WHERE buyuid = #{param1}
	</update>
	
	
	
	<delete id="buyDeleteByUid" flushCache="true">
		DELETE FROM sr_buy WHERE buyuid = #{buyuid}
	</delete>

