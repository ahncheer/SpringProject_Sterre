<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


	
<mapper namespace="com.lec.sterre_test.buy.beans.BuyWriteDAO">
	<select id="select" resultType="com.lec.sterre_test.buy.beans.BuyWriteDTO">
			SELECT 
				buyuid buyuid, 
				username  username, 
				goodsuid  goodsuid, 
				buynum  buynum,
				buydate  buydate
			FROM 
				sr_buys 
			ORDER BY 
				buyuid DESC
	</select>

	<!-- view.do -->
	<select id="buySelectByUid" resultType="com.lec.sterre_test.buy.beans.BuyWriteDTO">
		SELECT 
				buyuid buyuid, 
				username  username, 
				goodsuid  goodsuid, 
				buynum  buynum,
				buydate  buydate
		FROM sr_buys 
		WHERE buyuid=#{buyuid}
	</select>
	

